#include <stdio.h>

int main() {
    // Establecemos las variables 
    int entero;
    float decimal;
    char cadena[50];
    /*Saludamos al participante
    con ello usamos printf para imprimir lo que queramos decir */
    
    printf("Hola amigo \n");
    // Se solicita y se lee un valor entero
    printf(" Ingresa un número entero: ");\
    /* Y usamos scanf para ver el valor ingresado en este caso
     el numero entero, asi para todos los demas */
    scanf("%d", &entero);

    // Se solicita y se lee un valor en decimal
    printf(" Ingresa un número decimal: ");
    scanf("%f", &decimal);

    // Se solicita y se lee una cadena de caracteres 
    printf(" Ingresa una cadena de caracteres: ");
    scanf("%s", cadena);

    /* Se imprime los valores ingresados que en este caso se pedia tres datos diferentes 
    como lo es el número entero, decimal y un caracter */ 
    printf("\n Valores ingresados:\n");
    printf(" Número entero: %d\n", entero);
    printf(" Número decimal: %.2f\n", decimal);
    printf(" Cadena de caracteres: %s\n", cadena);

    return 0;
}
